<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout android:id="@+id/linearRowcar"
        android:layout_height="wrap_content"
        android:layout_weight="0.61" android:layout_width="0dp" android:orientation="horizontal">
        <ImageView android:id="@+id/imageCar"
            android:layout_height="@dimen/_31pxh"
            android:layout_width="@dimen/_55pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_car"
            tools:ignore="ContentDescription" tools:src="@drawable/img_car"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtPlate"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_9pxv"
            android:layout_marginStart="@dimen/_11pxh"
            android:layout_marginTop="@dimen/_6pxv"
            android:layout_weight="0.6" android:layout_width="0dp"
            android:singleLine="true"
            style="@style/txtInterregular13_3" tools:text="@string/lbl_30e_330_67t"/>
    </LinearLayout>
    <ImageView android:id="@+id/btnEdit"
        android:layout_height="@dimen/_18pxh"
        android:layout_marginBottom="@dimen/_2pxv"
        android:layout_marginStart="@dimen/_7pxh"
        android:layout_marginTop="@dimen/_3pxv"
        android:layout_width="@dimen/_18pxh"
        android:scaleType="fitXY"
        android:src="@drawable/img_pen"
        tools:ignore="ContentDescription" tools:src="@drawable/img_pen"/>
</LinearLayout>

